CreateFunction({
  name: "StoreTranslatedMessage",
  body: Query(Lambda(
    ["messageID", "language", "text"],
    Update(
      Ref(Collection("Messages"), Var("messageID")),
      {
        data: {
          translations: [
            {
              language: Var("language"),
              text: Var("text")
            }
          ]
        }
      }
    )
  ))
})

// Shape of a Message:
// {
//   chat: "1234567890",
//   originalText: "A string",
//   originalLanguage: "en",
//   translations: [
//     { language: "fr", text: "Un string" }
//   ]
// }